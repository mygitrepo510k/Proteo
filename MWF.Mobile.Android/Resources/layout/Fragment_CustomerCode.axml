<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="30.0dp"
        local:MvxBind="Text CustomerCodeLabel" />
    <EditText
        style="@style/Theme.EditText"
        android:background="#cccfd1"
        local:MvxBind="Text CustomerCode" />
    <Button
        style="@style/Theme.Button"
        android:background="#ffcf7b"
        local:MvxBind="Text EnterButtonLabel; Click EnterCodeCommand" />
</LinearLayout>